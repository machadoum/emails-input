@import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap");

.EmailsInput {
  * {
    box-sizing: border-box;
  }
  font-weight: 400;
  font-size: 14px;

  font-family: "Open Sans", sans-serif;
  border-radius: 8px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);

  .AddButton,
  .CountButton {
    margin-right: 16px;
    padding: 8px 16px;
    color: #fff;
    font-size: 14px;
    font-family: "Open Sans", sans-serif;
    text-align: center;
    background-color: #4262ff;
    border: none;
    border-radius: 6px;
  }

  .ActionBar {
    padding: 24px 50px 32px 50px;
    background: #fff;
    border-bottom-right-radius: 8px;
    border-bottom-left-radius: 8px;
  }

  .EmailBox {
    display: flex;
    flex-wrap: wrap;
    align-content: flex-start;
    height: 96px;
    padding: 8px;
    overflow-y: scroll;
    list-style-type: none;
    background: #fff;
    border: 1px solid #c3c2cf;
    border-radius: 4px;

    &__item {
      height: 24px;
      margin-top: 4px;
      color: #050038;
      font-size: 14px;
      font-family: "Open Sans", sans-serif;
      line-height: 24px;
    }

    &__input {
      padding: 0 0 0 8px;
      font-size: 14px;
      font-family: "Open Sans", sans-serif;
      border: none;
      outline: none;

      &::placeholder {
        color: #c3c2cf;
        opacity: 1; /* Firefox */
      }
    }
  }

  .Tag {
    &--valid {
      margin-right: 2px;
      padding-right: 8px;
      padding-left: 10px;
      background: rgba(102, 153, 255, 0.2);
      border-radius: 100px;
    }

    &--invalid {
      margin-right: 8px;
      margin-left: 10px;
      border-bottom: 1px dashed #d92929;
    }

    &__delete {
      width: 8px;
      height: 8px;
      margin-left: 8px;
      cursor: pointer;
    }
  }

  .Content {
    padding: 32px 50px 24px 50px;
    background: #f8f8f7;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;

    &__Title {
      font-size: 20px;
      line-height: 27px;
    }
  }
}
